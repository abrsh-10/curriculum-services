{
  "name": "curriculum-services-monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.6.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:curriculum": "turbo run dev --filter=curriculum",
    "dev:training": "turbo run dev --filter=training-management",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "turbo": "^2.0.0"
  },
  "dependencies": {
    "@radix-ui/react-scroll-area": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.8"
  }
}
